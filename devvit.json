{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "kinoticon",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "game.html"
      },
      "game": {
        "inline": false,
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create Daily Kinoticon",
        "description": "Create today's movie guessing game",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      },
      {
        "label": "Reset 7-day test",
        "description": "Clear counter so scheduler creates Day 1..7 again (dev sub)",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/reset-7-day-test"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "scheduler": {
    "tasks": {
      "daily-post": {
        "endpoint": "/internal/scheduler/daily-post",
        "cron": "0 0 * * *"
      },
      "daily-post-test": {
        "endpoint": "/internal/scheduler/daily-post-test",
        "cron": "* * * * *"
      }
    }
  },
  "dev": {
    "subreddit": "kinoticon_dev"
  }
}
